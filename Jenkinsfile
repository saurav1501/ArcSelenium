pipeline {
    agent any
    stages {
	    
	stage('Example Build') { 
      
        when {
                beforeAgent true
                branch 'master'
              }
            steps {
                echo 'Hello World'
		      echo 'Hello World'
		echo 'Hello World'
		    echo 'Hello World'  echo 'Hello World'
		echo 'Hello World'
		    echo 'Hello World'
		    
		
            }
        }
        stage('Example Deploy') {
             when {
                beforeAgent true
                branch 'master'
              }
            steps {
                echo 'Deploying'
		     echo 'Deploying'
		      echo 'Hello World'
		    
		   
            }
        }
    }
}
